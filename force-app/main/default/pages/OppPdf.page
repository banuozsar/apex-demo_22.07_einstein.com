<apex:page standardcontroller="Opportunity" renderAs="pdf">
  <apex:image
    url="https://developer.salesforce.com/files/salesforce-developer-network-logo.png"
  />
  <apex:form>
    <div align="left">
      <span
        style="
          font-family: sans-serif;
          font-size: 10pt;
          color: rgb(45, 116, 197);
        "
        ><strong>Salesforce Samples</strong></span
      >
    </div>
    <div align="right">
      <strong>Date</strong>: {!DAY(Today())} {!CASE(MONTH(Today()), 1,
      'January', 2, 'February', 3, 'March', 4, 'April', 5, 'May', 6, 'June', 7,
      'July', 8, 'August', 9, 'September', 10, 'October', 11, 'November', 12,
      'December', 'Unknown')} {!YEAR(Today())}
    </div>
    <div align="right">
      <strong>Generated By</strong>: {!$User.FirstName} {!$User.LastName}
    </div>
    <h2>Business Opportunity Statement</h2>
    <br />
    <div align="left">
      <strong>Opportunity Name: </strong
      ><apex:outputText value="{!opportunity.name}" />
    </div>

    <p>Your opportunity details are:</p>
    <apex:inputField value="{!opportunity.Account.name}" />

    <table>
      <tr>
        <th>Account Name:</th>
        <td><apex:outputText value="{!opportunity.Account.name}" /></td>
      </tr>
      <tr>
        <th>Sales Representative:</th>
        <td><apex:outputText value="{!opportunity.Owner.name}" /></td>
      </tr>
      <tr>
        <th>Close Date:</th>
        <td>
          <apex:outputText value="{0,date,MM/dd/yyyy}">
            <apex:param value="{!opportunity.CloseDate}" />
          </apex:outputText>
        </td>
      </tr>
      <tr>
        <th>Comment:</th>
        <td><apex:outputText value="{!opportunity.comment__c}" /></td>
      </tr>
    </table>

    <p><th>Remarks:</th></p>

    <apex:pageBlock title="{!Opportunity.Name}">
      <apex:pageblocktable
        value="{!Opportunity.OpportunityLineItems}"
        var="item"
        border="0,9px"
        width="100%"
        columnsWidth="30%,20%,15%,15%,20%"
      >
        <apex:column value="{!item.PricebookEntry.Name}" />
        <apex:column value="{!item.Description}" />
        <apex:column value="{!item.Quantity}" />
        <apex:column value="{!item.UnitPrice}">
          <apex:facet name="footer">
            <apex:outputText value="Total" dir="RTL" />
          </apex:facet>
        </apex:column>
        <apex:column value="{!item.TotalPrice}">
          <apex:facet name="footer"> ${!Opportunity.Amount} </apex:facet>
        </apex:column>
      </apex:pageblocktable>
    </apex:pageBlock>

    <p>
      It's a pleasure to have you on board. Please do not hesitate to contact us
      should you have any questions or concerns.
    </p>

    <p>Sincerely,</p>

    <div
      style="
        font-family: sans-serif;
        text-align: left;
        color: #2f5a61;
        font-size: 10pt;
      "
    >
      <br /> 504 Henry Street<br /> Brooklyn, NY 11231<br /> 917.302.8426<br />
      www.twentyoneknots.com<br />
    </div>

    <p>
      <div style="color: #999999; font-size: 90%; margin-top: 15px">
        Please sign and email to
        <apex:outputText value=" {!opportunity.Owner.name}" /> at
        <em><apex:outputText value="{!opportunity.Owner.email}" /></em>
      </div>
    </p>
  </apex:form>
</apex:page>
