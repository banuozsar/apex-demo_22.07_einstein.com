<apex:page standardcontroller="Opportunity" showHeader="false" renderAs="pdf">
<apex:form>
    <apex:image url="https://developer.salesforce.com/files/salesforce-developer-network-logo.png"/>
    <div align="left"><span style="font-family: sans-serif; font-size:10pt; color: rgb(8, 137, 189)"><strong>Salesforce Samples</strong></span></div>
    <div style="font-family:sans-serif;text-align:left;color:#447291;font-size:10pt;"><br/> 67 Clement Street<br/>
        Brooklyn, NY  11231<br/>
        124-485-5212<br/>
        www.salesforcesamples.com<br/></div>
    <div align="right"><strong>Date</strong>: {!DAY(Today())} {!CASE(MONTH(Today()), 1, 'January', 2, 'February', 3, 'March', 4, 'April', 5, 'May', 6, 'June', 7, 'July', 8, 'August', 9, 'September', 10, 'October', 11, 'November', 12, 'December', 'Unknown')} {!YEAR(Today())}</div>
	<div align="right"><strong>Generated By</strong>: {!$User.FirstName} {!$User.LastName}</div>
    <h2>PRICE QUOTE</h2>

    <table>
    <tr><th>Customer Name:</th>
        <td><apex:outputText value="{!opportunity.Account.Name}"/></td>
        </tr>
    <tr><th>Opportunity Name:</th>
        <td><apex:outputText value="{!opportunity.Name}"/></td>
        </tr>
    <tr><th>Sales Representative:</th>
        <td><apex:outputText value="{!opportunity.Owner.name}"/></td>
        </tr>
    <tr><th>Close Date:</th>
        <td><apex:outputText value="{0,date,MM/dd/yyyy}">
            <apex:param value="{!opportunity.CloseDate}"/>
        </apex:outputText></td>
        </tr>
    </table>

    <br/><apex:pageBlock>    
        <apex:pageblocktable value="{!Opportunity.OpportunityLineItems}" var="item" border="0,9px" width="100%" columnsWidth="35%,20%,12%,15%,18%">
            <apex:column value="{!item.PricebookEntry.Name}"/>
            <apex:column value="{!item.Description}"/>
            <apex:column value="{!item.Quantity}"/>
            <apex:column value="{!item.UnitPrice}">
                <apex:facet name="footer">
                    <apex:outputText value="Total"/>
                </apex:facet>
            </apex:column>
            <apex:column value="{!item.TotalPrice}">
                <apex:facet name="footer">
                    ${!Opportunity.Amount}
                </apex:facet>
            </apex:column>
        </apex:pageblocktable>
    </apex:pageBlock>

    <p style="font-size: 90%"><strong>Remarks: </strong><apex:outputText value="{!opportunity.Comment__c}"/></p>

	<div style="color: #999999; font-size: 90%; margin-top: 15px;">
        It's a pleasure to have you on board.  Please do not hesitate to contact us should you have any questions or concerns.<br/>
        Sincerely,<br/>

		<apex:outputText value=" {!opportunity.Owner.name}"/><br/>
        <em><apex:outputText value="{!opportunity.Owner.email}"/></em></div>

        <br/><div align="center" style="color: #999999; font-size: 90%; margin-top: 15px;">Above information is not an invoice and only an estimate of services and/or goods described.</div>

</apex:form >
</apex:page>